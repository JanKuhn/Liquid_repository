<div {{ block.shopify_attributes }}
  class="grid__item {{ grid_item_width }}">
  <div class="instagram-section__wrapper">
    {%- if link != blank -%}
      <a href="{{ link }}" target="_blank">
        <span class="instagram-image" data-url="{{ link }}"></span>
      </a>
    {%- else -%}
      <div class="image-wrap">
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {%- endif -%}

    {%- if caption != blank or account != blank or likes != blank -%}
      <div class="instagram-section__meta">
        {%- if likes != blank -%}
          <div class="instagram-section__likes">
            {{ likes }} likes
          </div>
        {%- endif -%}
        {%- if account != blank or caption != blank -%}
          <div class="instagram-section__caption">
            {%- if account != blank -%}
              <strong>{{ account }}</strong>
            {%- endif -%}
            {%- if caption != blank %}
              {{ caption }}
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>

  {% unless insta_product.empty? %}
    <div class="instagram__product-title rte">
      {{ 'general.social.pictured' | t }} &mdash; <a href="{{ insta_product.url }}">{{ insta_product.title }}</a>
    </div>
  {%- endunless -%}
</div>
