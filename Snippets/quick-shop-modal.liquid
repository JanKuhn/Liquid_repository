<div
  id="ProductScreen-{{ product.id }}"
  class="screen-layer screen-layer--product"
  data-product-title="{{ product.title }}"
  data-product-id="{{ product.id }}">
  <div class="screen-layer__inner">
    {% include 'product-template',
      section_id: product.id,
      isModal: true,

      product_shipping_callout: settings.product_shipping_callout,
      product_image_size: settings.product_image_size,
      product_image_type: settings.product_image_type,
      product_zoom_enable: settings.product_zoom_enable,
      variant_type: settings.variant_type,
      variant_labels_enable: settings.variant_labels_enable,
      vendor_enable: settings.vendor_enable,
      sku_enable: settings.sku_enable,
      quantity_enable: settings.quantity_enable,
      inventory_enable: settings.inventory_enable,
      inventory_threshold: settings.inventory_threshold,
      inventory_transfers_enable: settings.inventory_transfers_enable,
      enable_payment_button: settings.enable_payment_button,
      social_enable: settings.social_enable
    %}
  </div>

  {% if settings.enable_product_reviews %}
    <div id="Reviews-{{ product.id }}" class="index-section product-reviews product-reviews--full">
      <div class="page-width">
        <div id="shopify-product-reviews" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>
      </div>
    </div>
  {% endif %}

  {%- if settings.quick_shop_style == 'full' -%}
    <div id="ProductSectionsHolder-{{ product.id }}"></div>
    <div id="ProductRelatedHolder-{{ product.id }}"></div>
    <div id="SocialSectionHolder-{{ product.id }}"></div>
  {%- endif -%}

  <button type="button" class="btn btn--circle btn--large screen-layer__close js-screen-close">
    {% include 'icon-close' %}
    <span class="icon__fallback-text">{{ 'general.accessibility.close_modal' | t }}</span>
  </button>

  <div class="text-center small--hide">
    <button type="button" class="btn btn--tertiary js-screen-close">
      {% include 'icon-close' %}
      <span>{{ 'general.accessibility.close' | t }}</span>
    </button>
  </div>

  <a href="{{ routes.cart_url }}" class="quick-view__thumb-cart js-drawer-open-cart js-no-transition" aria-controls="CartDrawer">
    <span class="cart-link">
      {% include 'icon-bag' %}
      <span class="icon__fallback-text">{{ 'layout.cart.title' | t }}</span>
      <span class="cart-link__bubble{% if cart.item_count > 0 %} cart-link__bubble--visible{% endif %}">
        <span class="cart-link__count" aria-hidden="true">
          {{ cart.item_count }}
        </span>
      </span>
    </span>
  </a>
</div>
